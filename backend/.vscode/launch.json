{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: Celery Worker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "app.worker.celery_app",
                "worker",
                "--loglevel=info",
                "-Q",
                "main_queue",
                "--pool=solo"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "DATABASE_URL": "postgresql+asyncpg://postgres:postgres@localhost:5432/platform",
                "REDIS_URL": "redis://redis:6379/0"
            }
        }
    ]
}